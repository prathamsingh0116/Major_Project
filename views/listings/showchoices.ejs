<% layout("/layouts/boilerplate") %>

<style>
  #filters {
    display: flex;
    flex-wrap: wrap;

  }

  .filter {
    text-align: center;
    margin-top: 2rem;
    margin-right: 2rem;
    line-height: 1.1;
    opacity: 0.7;
    transition: .5s .2 ease-in-out;
    cursor: pointer;
  }

  .filter:hover {
    opacity: 1;
  }

  .filter .logo {
    font-size: 1.6rem;
  }

  .filter a {
    text-decoration: none;
    color: black;
  }
</style>


<p class="mt-3">
  <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseWidthExample" aria-expanded="false" aria-controls="collapseWidthExample">
   Filters
  </button>
</p>
<div style="min-height: 10px;">
  <div class="collapse" id="collapseWidthExample">
    <div class="card card-body" style="width: 300px;">
      <div id="filters">
        <div class="filter">
          <div class="logo"><i class='bx bxs-home'></i></div>
          <a href="/listings">Homes</a>
        </div>
  
      
        <div class="filter">
          <div class="logo"><i class='bx bxs-hot' ></i></div>
            <p>Trending</p>
        </div>
  
  
        <div class="filter">
          <div class="logo"><i class='bx bxs-bed' ></i></i></div>
            <a href="/listings/hotels">Hotels</a>
        </div>
  
        <div class="filter">
          <div class="logo"><i class='bx bxs-city' ></i></div>
            <p>Iconic Cities</p>
        </div>
  
      
        <div class="filter">
          <div class="logo"><i class='bx bx-male-female' ></i></div>
            <p>Trips</p>
        </div>
  
  
        <div class="filter">
          <div class="logo"><i class='bx bx-cycling' ></i></i></div>
            <p>Cycling</p>
        </div>
        
        <div class="filter">
          <div class="logo"><span class="material-symbols-outlined">
            landscape
            </span></div>
          <a href="/listings/mountains">Mountains</a>
        </div>
  
      
        <div class="filter">
          <div class="logo"><span class="material-symbols-outlined">
            captive_portal
            </span></div>
            <p>Explore New</p>
        </div>
  
  
        <div class="filter">
          <div class="logo"><span class="material-symbols-outlined">
            castle
            </span></div>
            <p>Castles</p>
        </div>
        
        <div class="filter">
          <div class="logo"><span class="material-symbols-outlined">
            sailing
            </span></div>
            <p>Boating</p>
        </div>
  
  
        <div class="tax-toggle">
          <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" checked>
            <label class="form-check-label" for="flexSwitchCheckChecked">Display total after taxes</label>
          </div>
        </div>
      </div>
  
    </div>
  </div>
</div>


    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 mt-3">
      <% for(let listing of allListings) { %>
        <a href="/listings/<%= listing._id %>" class="listing-link">
          <div class="card col listing-card">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="listening" style="height: 22rem;">
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text">
                <b>
                  <%= listing.title %>
                </b>
                <br>
                &#8377;
                <%= listing.price.toLocaleString("en-IN") %> / night
              </p>
            </div>
          </div>
        </a>
        <% } %>
    </div>